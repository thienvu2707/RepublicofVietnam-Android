<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/all_image"
        android:layout_width="@dimen/image_horizontal"
        android:layout_height="@dimen/image_vertiacal" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_vertiacal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/saigon_city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saigon City"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/categories_text_places"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/saigon_city_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:text="hello"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/categories_text_places"
            android:textStyle="italic" />

    </LinearLayout>

</LinearLayout>